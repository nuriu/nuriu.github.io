---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.categories }}",
      "tags"     : "{{ post.tags | array_to_sentence_string }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{% assign m = post.date | date: "%B" %}{{ post.date | date: "%d" }} {% case m %}{% when 'January' %}Ocak{% when 'February' %}Şubat{% when 'March' %}Mart{% when 'April' %}Nisan{% when 'May' %}Mayıs{% when 'June' %}Haziran{% when 'July' %}Temmuz{% when 'August' %}Ağustos{% when 'September' %}Eylül{% when 'October' %}Ekim{% when 'November' %}Kasım{% when 'December' %}Aralık{% endcase %} {{ post.date | date: "%Y" }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]